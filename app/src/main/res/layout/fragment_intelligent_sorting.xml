<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.tuolve.lvyou.destination.fragment.IntelligentSortingFragment">


    <TextView
        android:text="智能排序"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="32dp"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView45"
        android:layout_alignParentTop="true"/>

    <View
        android:id="@+id/intelligent_sorting_top"
         android:layout_below="@id/textView45"
        style="@style/line_view"/>

    <TextView
        android:text="销量从高到低"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/textView45"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView46"/>

    <View
        android:id="@+id/intelligent_sorting_view"
        android:layout_below="@id/textView46"
        style="@style/line_view"/>

    <TextView
        android:text="销量从低到高"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/intelligent_sorting_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView47"/>

    <View
        android:layout_below="@id/textView47"
        style="@style/line_view"/>
</RelativeLayout>
