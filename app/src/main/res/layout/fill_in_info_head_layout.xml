<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/iv_fill_in_info"/>

    <TextView
        android:text="【梦幻童话】香港迪士尼一日/门票(可订今日+无需打印)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_fill_in_info"
        android:layout_toRightOf="@+id/iv_fill_in_info"
        android:layout_toEndOf="@+id/iv_fill_in_info"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/textView131"/>

    <TextView
        android:text="产品类型: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_fill_in_info"
        android:layout_alignLeft="@+id/iv_fill_in_info"
        android:layout_alignStart="@+id/iv_fill_in_info"
        android:layout_marginTop="16dp"
        android:id="@+id/tv_fill_in_info_product_type"/>

    <TextView
        android:text="一日电子票"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_fill_in_info_product_type"
        android:layout_toRightOf="@+id/tv_fill_in_info_product_type"
        android:layout_toEndOf="@+id/tv_fill_in_info_product_type"
        android:id="@+id/tv_one_day_trick"/>

    <TextView
        android:text="成人票"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_one_day_trick"
        android:layout_toRightOf="@+id/tv_one_day_trick"
        android:layout_toEndOf="@+id/tv_one_day_trick"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:id="@+id/textView141"/>

    <TextView
        android:text="出行时间: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fill_in_info_product_type"
        android:layout_alignLeft="@+id/tv_fill_in_info_product_type"
        android:layout_alignStart="@+id/tv_fill_in_info_product_type"
        android:layout_marginTop="16dp"
        android:id="@+id/tv_fill_run_time"/>

    <TextView
        android:text="2017-05-01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_fill_run_time"
        android:layout_toRightOf="@+id/tv_fill_run_time"
        android:layout_toEndOf="@+id/tv_fill_run_time"
        android:id="@+id/textView143"/>

    <TextView
        android:text="购买数量: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_fill_run_time"
        android:layout_alignLeft="@+id/tv_fill_run_time"
        android:layout_alignStart="@+id/tv_fill_run_time"
        android:layout_marginTop="16dp"
        android:id="@+id/tv_buy_number"/>

    <TextView
        android:text="X1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_buy_number"
        android:layout_toRightOf="@id/tv_buy_number"
        android:id="@+id/textView145"/>

</RelativeLayout>