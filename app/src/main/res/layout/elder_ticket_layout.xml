<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:text="长者票"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:background="@drawable/doyen_bg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:id="@+id/textView134"/>

    <TextView
        android:text="￥358"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_alignTop="@+id/textView134"
        android:layout_toRightOf="@+id/textView134"
        android:layout_toEndOf="@+id/textView134"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/textView135"/>

    <com.tuolve.lvyou.view.NumberAddSubView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/textView136"
        android:layout_marginTop="20dp"
        app:value="1"
        app:minValue="1"
        app:maxValue="10000"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <View
        android:layout_marginTop="16dp"
        android:layout_below="@id/textView134"
        style="@style/line_view"/>
</RelativeLayout>