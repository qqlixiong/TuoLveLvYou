<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:text="香港狄斯尼乐园+青马大桥"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_odds_title"/>

    <RelativeLayout
        android:layout_marginTop="8dp"
        android:id="@+id/rl_odds"
        android:layout_below="@id/tv_odds_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/odds_ranking_layout"/>
    </RelativeLayout>

    <TextView
        android:text="主题公园游乐场"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_odds"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/textView53"/>

    <TextView
        android:text="115466人去过"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView53"
        android:layout_toRightOf="@id/textView53"
        android:layout_marginLeft="24dp"
        android:id="@+id/textView54"/>

    <TextView
        android:text="抢购"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@drawable/scenic_play_snap"
        android:textColor="#ffffff"
        android:layout_alignBottom="@+id/textView54"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:id="@+id/textView55"/>

    <TextView
        android:text="￥99"
        android:textSize="18sp"
        android:textColor="#FF0000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView56"
        android:layout_above="@id/textView55"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="8dp"
        android:layout_alignRight="@+id/textView55"
        android:layout_alignEnd="@+id/textView55"/>

    <TextView
        android:text="￥198"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_old_price"
        android:layout_alignBottom="@+id/textView56"
        android:layout_toLeftOf="@+id/textView56"
        android:layout_toStartOf="@+id/textView56"
        android:layout_alignTop="@+id/textView56"/>
</RelativeLayout>