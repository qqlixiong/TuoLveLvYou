<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rl_choice_shopping"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="112dp">


    <TextView
        android:id="@+id/textView_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_person_message"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/iv_person_message"
        android:layout_toRightOf="@+id/iv_person_message"
        android:text="省万元,五星马尔代夫"
        android:textSize="18dp"/>

    <ImageView
        android:id="@+id/iv_person_message"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/textView_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_title_bar"
        android:layout_alignStart="@+id/textView_title_bar"
        android:layout_below="@+id/textView_title_bar"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:text="如果你无法简洁的表达你的想法,那只说明你还不够了解它"/>
</RelativeLayout>