<com.handmark.pulltorefresh.library.PullToRefreshScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tuolve.lvyou.recommend.fragment.RecommendFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/banner_layout"/>

        <FrameLayout
            android:id="@+id/fl_hot_recommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.tuolve.lvyou.view.DoyenRecommendView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <include layout="@layout/recommend_shadow_layout"/>

        <com.tuolve.lvyou.recommend.seasonplay.SeasonPlayRecommendView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <!--<include layout="@layout/recommend_shadow_layout"/>

        <com.tuolve.lvyou.recommend.seasonplay.SeasonPlayRecommendView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>-->
        <include layout="@layout/recommend_shadow_layout"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_announcement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_travel_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</com.handmark.pulltorefresh.library.PullToRefreshScrollView>
