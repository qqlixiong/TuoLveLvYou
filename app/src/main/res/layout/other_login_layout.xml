<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:text="其它方式快速登录"
        android:textColor="@color/login_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:id="@+id/tv_login_other"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_weixin"
        android:layout_below="@id/tv_login_other"
        android:layout_toLeftOf="@+id/tv_login_other"
        android:layout_toStartOf="@+id/tv_login_other"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:id="@+id/iv_other_a"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_login_other"
        android:layout_alignTop="@+id/iv_other_a"
        android:src="@drawable/icon_qq"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_other_b"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_weibo"
        android:layout_alignTop="@+id/iv_other_a"
        android:layout_toRightOf="@+id/tv_login_other"
        android:layout_toEndOf="@+id/tv_login_other"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:id="@+id/iv_other_c"/>
</RelativeLayout>