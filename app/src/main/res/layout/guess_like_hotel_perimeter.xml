<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <include layout="@layout/recommend_shadow_layout"
        android:id="@+id/guess_like_shadow_layout"/>

    <TextView
        android:text="周边酒店"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guess_like_shadow_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="16sp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16sp"
        android:id="@+id/textView68"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_guess_like_hotel_perimeter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView68"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <RelativeLayout
        android:id="@+id/rl_guess_like_hotel_perimeter"
        android:layout_marginTop="8dp"
        android:layout_below="@id/rv_guess_like_hotel_perimeter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/recommend_shadow_layout"/>
    </RelativeLayout>

    <com.tuolve.lvyou.view.HotRecommendView
        android:layout_below="@id/rl_guess_like_hotel_perimeter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>