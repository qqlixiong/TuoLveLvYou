<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="90dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="16dp"
        android:src="@android:drawable/btn_star_big_on"
        android:id="@+id/iv_picture"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/image_view_comment"
        android:src="@android:drawable/btn_star_big_on"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignBottom="@+id/tv_time_interval"
        android:layout_toRightOf="@+id/tv_time_interval"
        android:layout_toEndOf="@+id/tv_time_interval"/>

    <TextView
        android:text="香港"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_time_interval"
        android:layout_toRightOf="@+id/tv_time_interval"
        android:layout_toEndOf="@+id/tv_time_interval"
        android:layout_marginLeft="35dp"
        android:id="@+id/textView_area"/>

    <TextView
        android:text="2017-04-04 - 2017-05-05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_time_interval"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/iv_picture"/>
</RelativeLayout>