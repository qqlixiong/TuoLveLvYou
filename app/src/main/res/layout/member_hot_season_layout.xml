<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include layout="@layout/member_shadow_layout"
        android:id="@+id/member_shadow_layout"/>

    <TextView
        android:text="当季热门"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_below="@+id/member_shadow_layout"
        android:layout_centerHorizontal="true"
        android:id="@+id/tv_guess_a"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rv_bg"
        android:src="@mipmap/ic_launcher"
        android:layout_below="@+id/tv_guess_a"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_person_message"/>


</RelativeLayout>