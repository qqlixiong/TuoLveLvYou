<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:gravity="center_horizontal"
              android:layout_height="wrap_content">

    <TextView
        android:text="多才多艺"
    android:layout_width="90dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:background="@drawable/doyen_bg"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView94"/>

    <TextView
        android:text="当地留学生"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:background="@drawable/doyen_bg"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView94"
        android:layout_toRightOf="@+id/textView94"
        android:layout_toEndOf="@+id/textView94"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/textView95"/>

    <TextView
        android:text="美食达人"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:background="@drawable/doyen_bg"
        android:gravity="center"
        android:id="@+id/textView96"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView95"
        android:layout_toEndOf="@+id/textView95"/>

    <TextView
        android:text="旅游达人"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:textSize="16sp"
        android:background="@drawable/doyen_bg"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_below="@id/textView94"
        android:id="@+id/textView97"/>
</RelativeLayout>