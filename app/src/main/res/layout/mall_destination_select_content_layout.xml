<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:layout_height="match_parent">

    <include layout="@layout/mall_destination_select_layout"
        android:id="@+id/mall_destination_select_layout"/>

    <View
        android:layout_below="@+id/mall_destination_select_layout"
        style="@style/line_view"
        android:id="@+id/view2"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:inputType="textPersonName"
        style="@style/edit_text_bg"
        android:paddingLeft="16dp"
        android:hint="请输入你的出发地"
        android:layout_below="@+id/view2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="搜索"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:background="@drawable/doyen_bg"
        android:layout_alignBottom="@+id/editText2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/textView39"/>

    <View
        android:id="@+id/mall_line_view_bottom"
        android:layout_below="@+id/editText2"
        style="@style/line_view"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_mall_destination_select_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mall_line_view_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>