<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
        android:text="青马大桥"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_provide_play"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_collection_highlight"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/imageView19"/>

    <RelativeLayout
        android:id="@+id/rl_provide_ranking_bar"
        android:layout_below="@id/tv_provide_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/odds_ranking_layout"/>
    </RelativeLayout>

    <TextView
        android:text="香港"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:background="@drawable/guess_like"
        android:layout_below="@+id/rl_provide_ranking_bar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/textView103"/>

    <TextView
        android:text="1991"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView103"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:id="@+id/textView104"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_distance"
        android:layout_toLeftOf="@+id/textView104"
        android:layout_toStartOf="@+id/textView104"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/rl_provide_ranking_bar"
        android:layout_marginRight="8dp"
        android:id="@+id/imageView25"/>
</RelativeLayout>